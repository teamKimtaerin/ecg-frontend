{
  "name": "rotation-text-effect",
  "version": "1.0.0",
  "entry": "index.mjs",
  "integrity": {
    "entry": "sha384-...",
    "assets": {},
    "signature": "base64(ed25519_signature)"
  },
  "peer": { "gsap": "^3.12.0" },
  "minRenderer": "1.3.0",
  "capabilities": ["text", "animation"],
  "preload": [],
  "schema": {
    "rotationDirection": {
      "type": "string",
      "default": "right",
      "enum": ["left", "right"],
      "ui": { "control": "radio" }
    },
    "rotationSpeed": {
      "type": "number",
      "default": 1,
      "min": 0.5,
      "max": 3,
      "step": 0.1,
      "ui": { "control": "slider" }
    },
    "animationDuration": {
      "type": "number",
      "default": 2,
      "min": 1,
      "max": 5,
      "step": 0.1,
      "ui": { "control": "slider" }
    },
    "staggerDelay": {
      "type": "number",
      "default": 0.3,
      "min": 0.1,
      "max": 1,
      "step": 0.05,
      "ui": { "control": "slider" }
    },
    "rotationAngle": {
      "type": "number",
      "default": 180,
      "min": 90,
      "max": 360,
      "step": 15,
      "ui": { "control": "slider" }
    },
    "enableGradient": {
      "type": "boolean",
      "default": false,
      "ui": { "control": "checkbox" }
    }
  },
  "i18n": {
    "ko": {
      "description": "GSAP 텍스트 회전 애니메이션 효과",
      "rotationDirection": "회전 방향",
      "rotationSpeed": "회전 속도",
      "animationDuration": "애니메이션 지속 시간",
      "staggerDelay": "단어 간 딜레이",
      "rotationAngle": "회전 각도",
      "enableGradient": "그라데이션 효과"
    },
    "en": {
      "description": "GSAP text rotation animation effect",
      "rotationDirection": "Rotation Direction",
      "rotationSpeed": "Rotation Speed",
      "animationDuration": "Animation Duration",
      "staggerDelay": "Word Stagger Delay",
      "rotationAngle": "Rotation Angle",
      "enableGradient": "Enable Gradient"
    }
  }
}
