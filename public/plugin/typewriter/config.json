{
  "name": "TypeWriter Text Effect",
  "version": "1.0.0",
  "description": "텍스트가 한 글자씩 타이핑되면서 나타나는 애니메이션 효과입니다.",
  "category": "Text Effect",
  "author": "ECG Team",
  "pluginFile": "/plugin/typewriter/typewriter.mjs",
  "className": "TypeWriterPlugin",
  "dependencies": ["gsap"],
  "schema": {
    "typingSpeed": {
      "type": "number",
      "label": "타이핑 속도",
      "description": "각 글자가 나타나는 간격 (초)",
      "default": 0.1,
      "min": 0.05,
      "max": 1,
      "step": 0.05
    },
    "startDelay": {
      "type": "number",
      "label": "시작 지연시간",
      "description": "타이핑 시작 전 대기 시간 (초)",
      "default": 0.5,
      "min": 0,
      "max": 3,
      "step": 0.1
    },
    "showCursor": {
      "type": "boolean",
      "label": "커서 표시",
      "description": "깜빡이는 커서를 표시합니다",
      "default": true
    },
    "cursorBlinkSpeed": {
      "type": "number",
      "label": "커서 깜빡임 속도",
      "description": "커서가 깜빡이는 속도 (초)",
      "default": 0.8,
      "min": 0.3,
      "max": 2,
      "step": 0.1
    },
    "randomSpeed": {
      "type": "boolean",
      "label": "랜덤 속도",
      "description": "각 글자마다 랜덤한 타이핑 속도를 적용합니다",
      "default": false
    }
  },
  "preview": {
    "thumbnail": "/asset-store/typewriter-thumb.svg",
    "demoText": "타이핑 효과",
    "previewBackground": "#000000"
  },
  "tags": ["text", "typing", "typewriter", "animation", "gsap"],
  "license": "MIT",
  "homepage": "https://ecg-frontend.com/plugins/typewriter",
  "repository": "https://github.com/ecg-team/typewriter-plugin"
}
