{
  "name": "Slide Up Effect",
  "version": "1.0.0",
  "description": "글자들이 아래에서 위로 부드럽게 슬라이딩하며 나타나는 현대적인 애니메이션 효과입니다.",
  "category": "Text Effect",
  "author": "ECG Team",
  "pluginFile": "/plugin/slideup/slideup.mjs",
  "className": "SlideUpPlugin",
  "dependencies": ["gsap"],
  "schema": {
    "slideDistance": {
      "type": "number",
      "label": "슬라이드 거리",
      "description": "글자가 아래에서 위로 이동하는 거리 (픽셀)",
      "default": 50,
      "min": 20,
      "max": 150,
      "step": 5
    },
    "animationDuration": {
      "type": "number",
      "label": "애니메이션 속도",
      "description": "각 글자의 슬라이딩 애니메이션 속도 (초)",
      "default": 0.8,
      "min": 0.3,
      "max": 2,
      "step": 0.1
    },
    "staggerDelay": {
      "type": "number",
      "label": "순차 간격",
      "description": "각 글자 사이의 시작 간격 (초)",
      "default": 0.1,
      "min": 0.02,
      "max": 0.4,
      "step": 0.01
    },
    "overshoot": {
      "type": "number",
      "label": "오버슈트",
      "description": "목표 위치를 넘어서는 정도 (픽셀)",
      "default": 10,
      "min": 0,
      "max": 30,
      "step": 2
    },
    "blurEffect": {
      "type": "boolean",
      "label": "블러 효과",
      "description": "슬라이딩 시 블러 효과를 적용합니다",
      "default": true
    }
  },
  "preview": {
    "thumbnail": "/asset-store/slide-up-thumb.svg",
    "demoText": "SLIDE UP",
    "previewBackground": "#000000"
  },
  "tags": ["text", "slide", "up", "modern", "smooth", "gsap"],
  "license": "MIT",
  "homepage": "https://ecg-frontend.com/plugins/slideup",
  "repository": "https://github.com/ecg-team/slideup-plugin"
}
