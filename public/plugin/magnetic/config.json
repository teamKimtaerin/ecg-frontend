{
  "name": "Magnetic Pull Effect",
  "version": "1.0.0",
  "description": "텍스트가 사방으로 흩어졌다가 자석에 끌려 모이듯 나타나는 애니메이션 효과입니다.",
  "category": "Text Effect",
  "author": "ECG Team",
  "pluginFile": "/plugin/magnetic/magnetic.mjs",
  "className": "MagneticPullPlugin",
  "dependencies": ["gsap"],
  "schema": {
    "scatterDistance": {
      "type": "number",
      "label": "흩어짐 거리",
      "description": "텍스트가 흩어지는 최대 거리 (픽셀)",
      "default": 200,
      "min": 50,
      "max": 500,
      "step": 10
    },
    "pullSpeed": {
      "type": "number",
      "label": "끌려오는 속도",
      "description": "자석에 끌려오는 애니메이션 속도 (초)",
      "default": 1.5,
      "min": 0.5,
      "max": 4,
      "step": 0.1
    },
    "staggerDelay": {
      "type": "number",
      "label": "글자 간격",
      "description": "각 글자 사이의 시작 간격 (초)",
      "default": 0.05,
      "min": 0,
      "max": 0.2,
      "step": 0.01
    },
    "magneticStrength": {
      "type": "number",
      "label": "자석 강도",
      "description": "끌려올 때 최대 크기 배율",
      "default": 1.2,
      "min": 1,
      "max": 2,
      "step": 0.1
    },
    "elasticEffect": {
      "type": "boolean",
      "label": "탄성 효과",
      "description": "도착 후 탄성있게 튕기는 효과를 적용합니다",
      "default": true
    }
  },
  "preview": {
    "thumbnail": "/asset-store/magnetic-pull-thumb.svg",
    "demoText": "MAGNETIC",
    "previewBackground": "#000000"
  },
  "tags": ["text", "magnetic", "pull", "scatter", "animation", "gsap"],
  "license": "MIT",
  "homepage": "https://ecg-frontend.com/plugins/magnetic",
  "repository": "https://github.com/ecg-team/magnetic-plugin"
}
