{
  "name": "Rotation Text Effect",
  "version": "1.0.0",
  "description": "텍스트가 회전하면서 나타나는 애니메이션 효과입니다.",
  "category": "Text Effect",
  "author": "ECG Team",
  "pluginFile": "/plugin/rotation/rotation.mjs",
  "className": "RotationPlugin",
  "dependencies": ["gsap"],
  "schema": {
    "rotationAngle": {
      "type": "number",
      "label": "회전 각도",
      "description": "텍스트가 회전할 각도를 설정합니다",
      "default": 180,
      "min": 0,
      "max": 360,
      "step": 10
    },
    "animationDuration": {
      "type": "number",
      "label": "애니메이션 속도",
      "description": "애니메이션 완료 시간 (초)",
      "default": 2,
      "min": 0.5,
      "max": 5,
      "step": 0.1
    },
    "staggerDelay": {
      "type": "number",
      "label": "단어 간격",
      "description": "각 단어 사이의 시작 간격 (초)",
      "default": 0.3,
      "min": 0,
      "max": 1,
      "step": 0.1
    },
    "rotationDirection": {
      "type": "select",
      "label": "회전 방향",
      "description": "텍스트가 회전할 방향을 선택합니다",
      "default": "right",
      "enum": ["left", "right"]
    },
    "enableGradient": {
      "type": "boolean",
      "label": "그라데이션 효과",
      "description": "텍스트에 컬러풀한 그라데이션 효과를 적용합니다",
      "default": false
    }
  },
  "preview": {
    "thumbnail": "/asset-store/rotation-text-thumb.svg",
    "demoText": "회전하는 텍스트",
    "previewBackground": "#000000"
  },
  "tags": ["text", "rotation", "animation", "gsap"],
  "license": "MIT",
  "homepage": "https://ecg-frontend.com/plugins/rotation",
  "repository": "https://github.com/ecg-team/rotation-plugin"
}
